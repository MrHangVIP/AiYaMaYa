<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        //头部

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <zsx.com.aiyamaya.ui.widget.CircleImageView
                android:id="@+id/ic_iv_headimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:src="@drawable/headimg01" />

            <TextView
                android:id="@+id/ic_tv_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ic_iv_headimg"
                android:text="发帖人"
                android:textColor="#f55"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ic_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="2016-11-02 23:50"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/ic_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ic_iv_headimg"
                android:layout_marginLeft="5dp"
                android:text="宝宝湿疹还是皮炎?宝湿疹还是皮炎?宝湿疹还是皮皮炎?宝湿疹还是皮炎?"
                android:textColor="#333333"
                android:textSize="20sp" />
        </RelativeLayout>

        //图片部分

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_iv_postimg1"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_below="@+id/ic_tv_title"
                android:layout_weight="1.0"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/headimg01" />

            <ImageView
                android:id="@+id/ic_iv_postimg2"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_below="@+id/ic_tv_title"
                android:layout_weight="1.0"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/headimg01" />

            <ImageView
                android:id="@+id/ic_iv_postimg3"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_below="@+id/ic_tv_title"
                android:layout_weight="1.0"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/headimg01" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/underline" />
        //底部评论部分

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/ic_tv_likecount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:text="21"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/ic_iv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/ic_tv_likecount"
                    android:src="@drawable/icon_like_selected" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/underline" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/ic_tv_commentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:text="10"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/ic_tv_commentcount"
                    android:src="@drawable/icon_comments" />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_main_bg"
    android:orientation="vertical" >
    
     <com.example.layoutdemo.TitleBar 
        android:id="@+id/aha_tb_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
    </com.example.layoutdemo.TitleBar>

    <View
                	android:layout_height="10dp"
					android:layout_width="fill_parent"
					android:background="#F9E4DB"/>
    
     <!-- 个人信息 -->
    <RelativeLayout
        android:layout_height="120dp"
    	android:layout_width="match_parent"
    	>
        <ImageView
            android:id="@+id/ahs_iv_headimg"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/headimg01"
            />
        <TextView
            android:id="@+id/ahs_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小猪"
            android:textSize="25dp"
            android:textColor="#9A9A9A"
            android:layout_toRightOf="@+id/ahs_iv_headimg"
            android:layout_marginLeft="20dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介：暂无简介"
            android:textSize="17dp"
            android:textColor="#9A9A9A"
            android:layout_toRightOf="@+id/ahs_iv_headimg"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/ahs_tv_username"/>
    </RelativeLayout>

    <RelativeLayout
                android:id="@+id/ahs_relayout_person"
                android:layout_height="45dp" 
                android:layout_width="fill_parent"
                >
                <ImageView 
                    android:id="@+id/ahs_iv_icon01"
		    	    android:src="@drawable/icon_settings_01"
                    android:layout_height="36px"
                    android:layout_width="36px"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:textSize="35px" 
                    android:textColor="#9A9A9A"
                    android:layout_toRightOf="@+id/ahs_iv_icon01"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />

                <ImageView 
                     android:src="@drawable/icon_settings_right"
                    android:layout_height="30px"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            <View 
 		    android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:background="#A0A0A0"/>
            
            <!-- 修改信息 -->
            
             <RelativeLayout 
                 android:id="@+id/ahs_relayout_modify"
                android:layout_height="45dp" 
                android:layout_width="fill_parent"
                >
                <ImageView 
                    android:id="@+id/ahs_iv_icon02"
		    	    android:src="@drawable/icon_settings_02"
                    android:layout_height="36px"
                    android:layout_width="36px"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改信息"
                    android:textSize="35px" 
                    android:textColor="#9A9A9A"
                    android:layout_toRightOf="@+id/ahs_iv_icon02"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />

                <ImageView 
                   android:src="@drawable/icon_settings_right"
                    android:layout_height="30px"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            <View 
 		    android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:background="#A0A0A0"/>
            
            <!-- 切换账号 -->
             <RelativeLayout 
                 android:id="@+id/ahs_relayout_change"
                android:layout_height="45dp" 
                android:layout_width="fill_parent"
                >
                <ImageView 
                    android:id="@+id/ahs_iv_icon03"
		    	    android:src="@drawable/icon_settings_03"
                    android:layout_height="36px"
                    android:layout_width="36px"
					android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="切换账号"
                    android:textSize="35px" 
                    android:textColor="#9A9A9A"
                    android:layout_toRightOf="@+id/ahs_iv_icon03"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />

                <ImageView 
                    android:src="@drawable/icon_settings_right"
                    android:layout_height="30px"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            <View 
 		    android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:background="#A0A0A0"/>
            
            <!-- 分享 -->
            
            <RelativeLayout 
                 android:id="@+id/ahs_relayout_share"
                android:layout_height="45dp" 
                android:layout_width="fill_parent"
                >
                <ImageView 
                    android:id="@+id/ahs_iv_icon04"
		    	    android:src="@drawable/icon_settings_04"
                    android:layout_height="36px"
                    android:layout_width="36px"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击分享"
                    android:textSize="35px" 
                    android:textColor="#9A9A9A"
                    android:layout_toRightOf="@+id/ahs_iv_icon04"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />

                <ImageView 
                    android:src="@drawable/icon_settings_right"
                    android:layout_height="30px"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            <View 
 		    android:layout_height="10dp"
			android:layout_width="fill_parent"
			android:background="#F9E4DB"/>
            
             <!--密码  -->

            <RelativeLayout 
                 android:id="@+id/ahs_relayout_changepsw"
                android:layout_height="45dp" 
                android:layout_width="fill_parent"
                >
                <ImageView 
                    android:id="@+id/ahs_iv_icon05"
		    	    android:src="@drawable/icon_settings_05"
                    android:layout_height="36px"
                    android:layout_width="36px"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:textSize="35px" 
                    android:textColor="#9A9A9A"
                    android:layout_toRightOf="@+id/ahs_iv_icon05"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20px"
                    />

                <ImageView 
                    android:src="@drawable/icon_settings_right"
                    android:layout_height="30px"
                    android:layout_width="30px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    />
                
            </RelativeLayout>
            <View 
 		    android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:background="#A0A0A0"/>
            
            <!-- 关于我们 -->
    <RelativeLayout
         android:id="@+id/ahs_relayout_aboutus"
        android:layout_height="45dp"
        android:layout_width="fill_parent"
        >
        <ImageView
            android:id="@+id/ahs_iv_icon06"
            android:src="@drawable/icon_settings_06"
            android:layout_height="36px"
            android:layout_width="36px"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="35px"
            android:textColor="#9A9A9A"
            android:layout_toRightOf="@+id/ahs_iv_icon06"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            />

        <ImageView
            android:src="@drawable/icon_settings_right"
            android:layout_height="30px"
            android:layout_width="30px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
 		    android:layout_height="1dp"
			android:layout_width="fill_parent"
			android:background="#A0A0A0"/>
            
            <!-- 退出登录 -->
            <Button 
                android:id="@+id/ahs_btn_quit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="退出账户"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:textColor="#9A9A9A"
                android:background="#F9E4DB"/>
            
</LinearLayout>

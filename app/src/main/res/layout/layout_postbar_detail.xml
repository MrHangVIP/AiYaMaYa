<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_scrollFlags="scroll|enterAlways"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <zsx.com.aiyamaya.ui.widget.CircleImageView
        android:id="@+id/lpd_ci_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/headimg01"/>

    <TextView
        android:id="@+id/lpd_tv_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="songzhihang"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/lpd_ci_head"/>

    <TextView
        android:id="@+id/lpd_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="songzhihang"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:textSize="13sp" />

    <zsx.com.aiyamaya.ui.widget.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:src="@drawable/headimg01"/>

    <FrameLayout
        android:layout_marginTop="50dp"
        android:id="@+id/lpd_fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


</RelativeLayout>